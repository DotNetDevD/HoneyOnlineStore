@model Product

<form method="post" style="background-color:#f1f1f1">
    @* enctype="multipart/form-data" - for work with img *@
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4 mb-3">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control form-control-sm" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 mb-3">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8 mb-3">
                        <input asp-for="Price" disabled class="form-control form-control-sm" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 mb-3">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8 mb-3">
                        <textarea asp-for="Description" class="form-control summernote"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 mb-3">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8 mb-3">
                        <input asp-for="ApplicationType.Name" disabled class="form-control form-control-sm" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 mb-3">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8 mb-3">
                        <input asp-for="Category.Name" disabled class="form-control form-control-sm" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100 btn-sm" value="Update">Delete</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100 btn-sm">
                                <i class="fa-solid fa-arrow-right-from-bracket"></i> Return to Product List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*display images of product*@
                @if (Model.Id != 0)
                {
                    <img src="@WebConstant.ImagesPath@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                }
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function() {
            $('.summernote').summernote({
                disable: true
            });
        });
        }
    </script>
    }