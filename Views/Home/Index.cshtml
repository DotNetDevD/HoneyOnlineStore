@model HomeVM

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center">
        @*filter-button - for changing; data-filter*@
        <button class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach (var obj in Model.Categories)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@obj.Name.Replace(' ','_')">
                @obj.Name
            </button>
        }
    </div>
    <br />
    <div class="row">
        @foreach (var product in Model.Products)
        {
            //display all product
            <partial name="_SingleProductPage" model="product" />
        }
    </div>
</div>

@section Scripts{
    <script>
    $(document).ready(function(){
        //check attribute data-filter of clicked btn
        //and necessary product add on page
    $(".filter-button").click(function(){

        var value = $(this).attr('data-filter');
        if(value == "all")
        {
            $('.filter').show('1000');
        }
        else
        {
            $(".filter").not('.'+value).hide('3000');
            $('.filter').filter('.'+value).show('3000');

        }
    });
});
    </script>
}