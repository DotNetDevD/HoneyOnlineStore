@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6">
            <a asp-action="Upsert" class="btn btn-primary float-end">
                <i class="fa-solid fa-plus"></i> Create new Product
            </a>
        </div>
    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Application Type
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td witdh="30%">@item.Name</td>
                        <td witdh="20%">@item.Price</td>
                        <td witdh="20%">@item.Category.Name</td>
                        <td witdh="20%">@item.ApplicationType.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id ="@item.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                  <i class="fa-regular fa-pen-to-square"></i> Edit
                                </a>
                                <a asp-route-Id ="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                  <i class="fa-solid fa-trash-can"></i>  Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No product exist.</p>
    }
</div>