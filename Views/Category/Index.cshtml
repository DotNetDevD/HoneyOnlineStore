@model IEnumerable<Category>

@{
    ViewData["Title"] = "Category";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary float-end">
                <i class="fa-solid fa-plus"></i> Create new Category
            </a>
        </div>
    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td witdh="50%">@item.Name</td>
                        <td witdh="30%">@item.OrderCategory</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-route-Id ="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                  <i class="fa-regular fa-pen-to-square"></i> Edit
                                </a>
                                <a asp-controller="Category" asp-route-Id ="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                  <i class="fa-solid fa-trash-can"></i>  Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exist.</p>
    }
</div>